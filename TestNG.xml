<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite parallel="false" name="nopcommerce Regression Suite" thread-count="2">
  <test name="Chrome Test">
    <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="tests.UserRegistrationTest"/>
      <class name="tests.MyAccountTest"/>
      <class name="tests.ContactUsTest"/>
      <class name="tests.SearchProductTest"/>
      <class name="tests.SearchProductTestWithAutoSuggest"/>
      <class name="tests.EmailFriendTest"/>
      <class name="tests.ChangeCurrencyTest"/>
      <class name="tests.AddProductReviewTest"/>
    </classes>
  </test> <!-- Test -->

  <test name="Firefox Test">
    <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="tests.UserRegistrationTest"/>
      <class name="tests.MyAccountTest"/>
      <class name="tests.ContactUsTest"/>
      <class name="tests.SearchProductTest"/>
      <class name="tests.SearchProductTestWithAutoSuggest"/>
      <class name="tests.EmailFriendTest"/>
      <class name="tests.ChangeCurrencyTest"/>
      <class name="tests.AddProductReviewTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
